{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipmind",
  "version": "0.1.0",
  "identifier": "com.clipmind.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
         "title": "ClipMind",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "alwaysOnTop": false,
        "decorations": false,
        "maximized": false,
        "closable": true,
        "minimizable": true,
        "skipTaskbar": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.ico"],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "智慧剪貼簿動作助理",
    "longDescription": "使用 AI 技術自動分析剪貼簿內容並提供智慧化動作建議"
  }
}
